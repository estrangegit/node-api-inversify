{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "types": ["reflect-metadata", "mocha"],
    },
    "compileOnSave": false,
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules"
    ]
}
